---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora Simple</title>
    <link rel="stylesheet" href="/calculadora/estilos.css">
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <div class="calculadora">
        <div class="calculadora__pantalla" id="pantalla">0</div>

        <div class="calculadora__botones">
            <button class="calculadora__boton" data-valor="7">7</button>
            <button class="calculadora__boton" data-valor="8">8</button>
            <button class="calculadora__boton" data-valor="9">9</button>
            <button class="calculadora__boton calculadora__boton--operacion" data-valor="/">/</button>
            <button class="calculadora__boton" data-valor="4">4</button>
            <button class="calculadora__boton" data-valor="5">5</button>
            <button class="calculadora__boton" data-valor="6">6</button>
            <button class="calculadora__boton calculadora__boton--operacion" data-valor="*">*</button>
            <button class="calculadora__boton" data-valor="1">1</button>
            <button class="calculadora__boton" data-valor="2">2</button>
            <button class="calculadora__boton" data-valor="3">3</button>
            <button class="calculadora__boton calculadora__boton--operacion" data-valor="-">-</button>
            <button class="calculadora__boton" data-valor="C">C</button>
            <button class="calculadora__boton" data-valor="0">0</button>
            <button class="calculadora__boton" data-valor=".">.</button>
            <button class="calculadora__boton calculadora__boton--operacion" data-valor="+">+</button>
            <button class="calculadora__boton calculadora__boton--grande" data-valor="Di!">Di!</button>
            <button class="calculadora__boton calculadora__boton--grande calculadora__boton--igual" data-valor="=">=</button>
        </div>
      </div>
    </main>
    <Footer />
    <script is:inline src="/calculadora/script.js"></script>
  </body>
</html>
